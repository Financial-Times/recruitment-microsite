doctype html
html(lang="en")
  include partials/head.pug
  body
    .landing
        include partials/header.pug
    .content
        section.intro
            .intro__heritage-logo__container
                img.intro__heritage-logo.fade-out-animation(src=`images/${intro.heritage_logo}`, alt=`${intro.heritage_logo}`, role="presentation")
            .intro__message__container
                img.intro__message__container__logo.fade-in-animation(src=`images/${intro.logo}`, alt=`${intro.logo}`, role="presentation")
                h1.fade-in-animation #{intro.heading}
                hr.fade-in-animation
                p.fade-in-animation #{intro.subheading}
                a.fade-in-animation(href="openings.html") See our roles
        section.about.chapter(id="about")
            .announcement
                .section-line
                h2 #{about.title}
                p #{about.text}
        section.video
            .video-wrapper.content
                video(controls id="recruitment-video" src=`${video.link}` poster="images/Video_Cover.png")
                .play-button(id="play-pause")
        section.culture.chapter(id="culture")
            .announcement
                .section-line
                h2 #{culture.title}
                p #{culture.text}
            .culture-cards
                each card in culture.cards
                    .culture-card
                        img(src=`images/${card.image}`, alt=`${card.title}`, role="presentation")
                        h4 #{card.title}
                        p #{card.text}
        section.quotes
            .chapter.fade-in-animation
                .quote
                    h1 #{quotes[0].quote}
                    hr
                    p #{quotes[0].author}
            .intro__heritage-logo__container
                img.intro__heritage-logo.fade-out-animation(src=`images/${intro.heritage_logo}`, alt=`${intro.heritage_logo}`, role="presentation")
        section.people.chapter(id="people")
            .announcement
                .section-line
                h2 #{people.title}
                p #{people.text}
            .interviews
                each person,index in people.information
                    .interview(class="interview-"+index)
                        img(src=`images/${person.image}`)
                        p #{person.caption}
        section.benefits.chapter(id="benefits")
            .announcement
                .section-line
                h2 #{benefits.title}
            .benefits-cards
                each card, index in benefits.cards
                    .benefits-card(class="benefit-"+index)
                        hr(align="left")
                        h3 #{card.title}
                        p #{card.text}
        section.apply.chapter
            .question
                h2 #{apply.title}
                p #{apply.text}
                a(href="openings.html") #{apply.button}
    include partials/footer.pug
script(type="text/javascript")
    include ../scripts/play-pause-video.js
