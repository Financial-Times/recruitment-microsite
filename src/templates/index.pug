doctype html
html(lang="en")
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Product and Technology
    link(rel='stylesheet', href='css/main.css', type='text/css')
  body
    div.content
        section.intro.front-page
            div.heritage-logo-container
                img.heritage-logo(src=`images/${intro.heritage_logo}`, alt=`{intro.logo}`, role='presentation')
            img.central-logo(src=`images/${intro.logo}`, alt=`{intro.logo}`, role='presentation')
            h1 #{intro.heading}
            hr
            p #{intro.subheading}
        nav.menu
            each val in menu.items
                li.menu__item
                    a(href=`#${val.link}`)=val.text
        section.about.chapter(id='about')
            div.announcement
                div.section-line
                h2 #{about.title}
                p #{about.text}
        section.video
            div.video-wrapper.content
                iframe(width="1440" height="800" src="https://www.youtube-nocookie.com/embed/cdy_bj2mahU?rel=0&amp;controls=0&amp;modestbranding=1" frameborder="0" allow="autoplay; encrypted-media")
        section.culture.chapter(id='culture')
            div.announcement
                div.section-line
                h2 #{culture.title}
                p #{culture.text}
            div.culture-cards
                each card in culture.cards
                    div.culture-card
                        img(src=`images/${card.image}`, alt=`{card.title}`, role='presentation')
                        h4 #{card.title}
                        p #{card.text}
        section.quotes
            h1 #{quotes[0].quote}
            hr
            p #{quotes[0].author}
        section.people.chapter(id='people')
            div.announcement
                div.section-line
                h2 #{people.title}
                p #{people.text}
            div.interviews
                each video,index in people.videos
                    div.interview(class='interview-'+index)
                        img(src=`images/${video.image}`)
        section.benefits.chapter(id='benefits')
            div.announcement
                div.section-line
                h2 #{benefits.title}
            div.benefits-cards
                each card, index in benefits.cards
                    div.benefits-card(class='benefit-'+index)
                        hr(align="left")
                        h3 #{card.title}
                        p #{card.text}
        section.apply(id='openings')
            div.question
                h2 #{apply.title}
                p #{apply.text}
                a(href='openings.html') #{apply.button}
        footer
            hr
            p #{footer.text}
